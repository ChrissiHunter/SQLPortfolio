--Identifying unrecognized characters imported from csv file

SELECT DISTINCT gamename FROM STEAMCHARTS
GROUP BY gamename
HAVING gamename LIKE "%�%"
ORDER BY MIN(year) DESC;

-- Data cleaning game names. Removed unrecognized characters. Standardized capitalizations. Removed " " from the beginning and ending of title

